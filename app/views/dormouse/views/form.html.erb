<ul id="tabs">
  <% @manifest.tabs.each do |tab| %>
    <li><%= link_to tab.name, tab.url_for_object(@object) %></li>
  <% end %>
</ul>

<%= form_for @object, :url => save_url do |f| %>

  <%#= f.error_messages %>

  <%= @manifest.widgets.render(self, @object, :form => f) %>

  <div id="actions">
    <%= f.submit %>
  </div>

<% end %>