<ul id="tabs">
  <% @tabs.each do |tab| %>
    <li><%= link_to tab.name, tab.url_for_object(@object) %></li>
  <% end %>
</ul>

<% form_for @object, :url => manifest.save_object_url(@object) do |f| %>
  
  <%= f.error_messages %>
  
  <% @widgets.each do |widget| %>
    <% next if widget.hidden %>
    <%= widget.render_in_view(self, @object, :form => f) %>
  <% end %>
  
  <%= f.submit %>
  
<% end %>